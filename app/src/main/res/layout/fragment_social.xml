<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBlack">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlack"
        android:orientation="vertical"
    >

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Social"
            android:textAlignment="center"
            android:textColor="@color/fontColorWhiteGray"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/tvSocialInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How are you doing in the Highscore?\nAre you missing an achievement?"
            android:textColor="@color/fontColorWhiteGray"/>
        <Button
            android:id="@+id/bShowHighscore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:text="Show Highscore"/>
        <Button
            android:id="@+id/bShowAchievements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:text="Show Achievements"/>
        <CheckBox
            android:id="@+id/cbPlayMusic"
            android:layout_width="match_parent"
            android:background="@color/colorDarkGrey1"
            android:layout_height="wrap_content" android:text="Play Music"
            android:textColor="@color/fontColorWhiteGray"/>
        <LinearLayout
            android:id="@+id/llSpacer1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorDarkGrey1"
            android:orientation="horizontal">
        </LinearLayout>
        <TextView
            android:id="@+id/tvVersionNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Version:"
            android:textColor="@color/fontColorWhiteGray"/>
    </LinearLayout>


</ScrollView>