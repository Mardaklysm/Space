<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBlack">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlack"
        android:orientation="vertical"
    >

        <TextView
            android:id="@+id/tvFragmentShipTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:text="Ship"
            android:textAlignment="center" android:textColor="@color/fontColorWhiteGray"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/tvShipInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:text="Information"
            android:textColor="@color/fontColorWhiteGray"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvShipInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine" android:text="TextView"
            android:textColor="@color/fontColorGray1"
            android:textSize="12sp"/>
        <LinearLayout
            android:id="@+id/llSpacer1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorDarkGrey1"
            android:orientation="horizontal">
        </LinearLayout>
        <TextView
            android:id="@+id/tvShipRooms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:text="Ship Rooms"
            android:textColor="@color/fontColorWhiteGray"
            android:textStyle="bold"/>
        <LinearLayout
            android:id="@+id/llShipRooms"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llSpacer2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorDarkGrey1"
            android:orientation="horizontal">
        </LinearLayout>
        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/tvShipWeapons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ship Weapons"
            android:textColor="@color/fontColorWhiteGray"
            android:textStyle="bold"/>
        <LinearLayout
            android:id="@+id/llShipWeapons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llSpacer3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorDarkGrey1"
            android:orientation="horizontal">
        </LinearLayout>
        <TextView
            android:id="@+id/tvShipInventory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:text="Ship Inventory"
            android:textColor="@color/fontColorWhiteGray"
            android:textStyle="bold"/>
        <LinearLayout
            android:id="@+id/llShipInventory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llSpacer4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorDarkGrey1"
            android:orientation="horizontal">
        </LinearLayout>
        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/bRestartGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Self Destruction"/>
    </LinearLayout>


</ScrollView>